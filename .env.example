# Example environment file for local development
# Copy this file to .env and modify as needed:
#   cp .env.example .env

# Server settings
ROUTER_HOST=0.0.0.0
ROUTER_PORT=9010
ROUTER_LOG_LEVEL=DEBUG

# Configuration path
ROUTER_CONFIG_PATH=config/agents.yaml

# Embedding model (will be downloaded on first run)
ROUTER_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Retry settings
ROUTER_RETRY_ATTEMPTS=2
ROUTER_RETRY_BACKOFF_MS=500

# Session settings
ROUTER_SESSION_ENABLED=true
ROUTER_SESSION_TIMEOUT_MIN=30
ROUTER_SESSION_DRIFT_THRESHOLD=0.5

# Observability settings
ROUTER_AUDIT_ENABLED=true
ROUTER_AUDIT_LOG_LEVEL=DEBUG
ROUTER_STREAM_BUFFER_ENABLED=true
ROUTER_STREAM_BUFFER_MAX_SIZE=1000000
